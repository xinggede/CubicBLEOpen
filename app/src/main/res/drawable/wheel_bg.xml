<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#306d6d6d"
                android:endColor="#30c0c0c0"
                android:startColor="#30c0c0c0" />

            <stroke
                android:width="1dp"
                android:color="#30333333" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="4dp"
        android:right="4dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:endColor="#b2b2b2"
                android:startColor="#b2b2b2" />
        </shape>
    </item>

</layer-list>