<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"><shape>
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="1dp" android:color="@color/segmentNormal" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:endColor="@color/segmentNormal" android:startColor="@color/segmentNormal" />

            <stroke android:width="1dp" android:color="@color/segmentNormal" />
        </shape></item>

</selector>