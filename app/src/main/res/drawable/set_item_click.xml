<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#D4D4D4" android:startColor="#D4D4D4" />

            <corners android:radius="@dimen/dimen_10" />

            <stroke android:width="1dp" android:color="#898989" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="270" android:endColor="#E8E8E8" android:startColor="#E8E8E8" />

            <corners android:radius="@dimen/dimen_10" />

            <stroke android:width="1dp" android:color="#898989" />
        </shape></item>

</selector>