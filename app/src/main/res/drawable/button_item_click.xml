<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="0" android:endColor="#1E90FF" android:startColor="#1E90FF" />

            <stroke android:width="1dp" android:color="#898989" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="0" android:endColor="#70B7B7B7" android:startColor="#70B7B7B7" />

            <stroke android:width="1dp" android:color="#696969" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>